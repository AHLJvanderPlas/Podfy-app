# === Global cache & security headers (applies to all responses) ===
/*
  Cache-Control: no-store
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(self), camera=(), microphone=()
  X-Frame-Options: DENY
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: cross-origin
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  # CSP: allow images from self, data URIs, and Podfy logos worker;
  # allow XHR/fetch to podfy.net (and podfy.app if needed)
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https://podfy.net https://podfy.app; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://podfy.net https://podfy.app; frame-ancestors 'none';
*/

# NOTE: Paths below are URL paths at runtime (no "/public" prefix).

/themes.json
  Cache-Control: no-store
  Access-Control-Allow-Origin: https://podfy.net
  Access-Control-Allow-Methods: GET, OPTIONS
  Access-Control-Allow-Headers: Content-Type

/i18n.json
  Cache-Control: no-store

/assets/*
  Cache-Control: public, max-age=31536000, immutable

/logos/*
  # Static files in /public/logos (if any) may still be served by Pages;
  # your R2-backed worker sets its own headers for /logos on podfy.net/app.
  Cache-Control: public, max-age=31536000, immutable
